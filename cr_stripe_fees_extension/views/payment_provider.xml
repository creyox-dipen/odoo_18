<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="inherit_payment_provider_form_view" model="ir.ui.view">
        <field name="name">Inherited Payment Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='configuration']" position="after">
                <page name="fees" string="Fees" invisible="code != 'stripe'">
                    <group>
                        <group>
                            <field name="is_extra_fees"/>
                        </group>
                        <group>
                            <field name="fees_product" domain="[('type','=','service')]"/>
                        </group>
                        <field name="line_ids">
                            <list>
                                <field name="payment_method_id"/>
                                <field name="default_method"/>
                                <field name="fix_domestic_fees"/>
                                <field name="var_domestic_fees"/>
                                <field name="is_free_domestic"/>
                                <field name="free_domestic_amount"/>
                                <field name="fix_international_fees"/>
                                <field name="var_international_fees"/>
                                <field name="is_free_international"/>
                                <field name="free_international_amount"/>
                            </list>
                            <form>
                                <group>
                                    <group>
                                        <field name="payment_method_id"/>
                                    </group>
                                    <group>
                                        <field name="default_method"/>
                                    </group>
                                    <group string="Domestic Fees">
                                        <field name="fix_domestic_fees"/>
                                        <field name="var_domestic_fees"/>
                                        <field name="is_free_domestic"/>
                                        <field name="free_domestic_amount"/>
                                    </group>
                                    <group string="International Fees">
                                        <field name="fix_international_fees"/>
                                        <field name="var_international_fees"/>
                                        <field name="is_free_international"/>
                                        <field name="free_international_amount"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>