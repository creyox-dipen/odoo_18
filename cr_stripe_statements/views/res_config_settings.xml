<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit_stripe" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stripe</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add inside the Default Accounts block -->
            <xpath expr="//block[@id='default_accounts']" position="inside">
                <setting string="Stripe Fees Account:">
                    <div class="content-group">
                        <div class="row mt8">
                            <label for="stripe_expense_account_id" class="col-lg-5 o_light_label" string="Stripe Expense"/>
                            <field name="stripe_expense_account_id" domain="[('account_type', '=', 'expense')]"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>