<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.view</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='miscellaneous']" position="after">
                <page string="Material Costing" name="Material Costing">
                    <field name="material_costing_ids" widget="one2many">
                        <list string="Material Costing" editable="bottom">
                            <field name="mat_operation_id"/>
                            <field name="mat_product_id"/>
                            <field name="mat_planned_qty"/>
                            <field name="mat_uom" readonly="1"/>
                            <field name="mat_cost_per_unit"/>
                            <field name="mat_total_product_cost"/>
                        </list>
                    </field>
                    <group class="oe_subtotal_footer" style="font-size: 22px; font-weight: bold;">
                        <field name="mat_total_cost"
                               readonly="1" label="Total Material Cost"/>
                    </group>
                </page>
                <page string="Labour Costing" name="Labour Costing">
                    <field name="labour_costing_ids" widget="one2many">
                        <list string="Labour Costing" editable="bottom">
                            <field name="lab_operation_id"/>
                            <field name="lab_planned_hour"/>
                            <field name="lab_cost_per_hour"/>
                            <field name="lab_total_operation_cost"/>
                        </list>
                    </field>
                    <group class="oe_subtotal_footer" style="font-size: 22px; font-weight: bold;">
                        <field name="lab_total_cost"
                               readonly="1" label="Total Material Cost"/>
                    </group>
                </page>
                <page string="Overhead Costing" name="Overhead Costing">
                    <field name="overhead_costing_ids" widget="one2many">
                        <list string="Overhead Costing" editable="bottom">
                            <field name="ove_operation_id"/>
                            <field name="ove_planned_hour"/>
                            <field name="ove_cost_per_hour"/>
                            <field name="ove_total_operation_cost"/>
                        </list>
                    </field>
                    <group class="oe_subtotal_footer" style="font-size: 22px; font-weight: bold;">
                        <field name="ove_total_cost"
                               readonly="1" label="Total Material Cost"/>
                    </group>
                </page>
                <page string="Total Costing" name="Total Costing">
                    <group>
                        <field name="mat_total_cost"  style="font-size: 14px;"/>
                        <field name="lab_total_cost"  style="font-size: 14px;"/>
                        <field name="ove_total_cost"  style="font-size: 14px;"/>
                        <field name="total_cost" class="oe_subtotal_footer" style="font-size: 22px; font-weight: bold;"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>