<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="fetch_transaction_wizard_form_view_id" model="ir.ui.view">
        <field name="name">Fetch Transaction Wizard</field>
        <field name="model">fetch.transaction.wiz</field>
        <field name="arch" type="xml">
            <form string="Fetch Stripe Transactions Wizard">
                <sheet>
                    <group>
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <footer>
                        <button type="object" name="action_fetch_transaction" string="Fetch" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>