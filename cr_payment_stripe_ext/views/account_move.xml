<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="inherit_account_move_stripe_extension_id" model="ir.ui.view">
        <field name="name">inherit.account.move.stripe.extension</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_register_payment']" position="after">
                <button name="action_pay_with_stripe" id="pay_with_stripe_button_id"
                        groups="cr_payment_stripe_ext.stripe_payment_access_group_id"
                        type="object" class="oe_highlight"
                        invisible="(state != 'posted' or payment_state not in ('not_paid', 'partial', 'in_payment') or move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))"
                        string="Pay With Stripe"
                />
            </xpath>
        </field>
    </record>

</odoo>