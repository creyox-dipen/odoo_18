<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="manage_analytic_entries_setting_id" model="ir.ui.view">
        <field name="name">Manage Analytic Entries Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='schedule_info']" position="after">
                <block title="Manage Analytic Entry Selection in Inventory Operations">
                    <settings id="manage_analytic_account_setting_id">
                        <field name="analytic_account_setting" widget="radio"/>
                    </settings>
                </block>
            </xpath>
        </field>
    </record>

</odoo>