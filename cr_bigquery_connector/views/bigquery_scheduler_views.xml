<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- list View -->
    <record id="view_bigquery_scheduler_tree" model="ir.ui.view">
        <field name="name">cr.big.query.scheduler.list</field>
        <field name="model">cr.big.query.scheduler</field>
        <field name="arch" type="xml">
            <list string="BigQuery Configuration">
                <field name="cr_name"/>
                <field name="cr_operation"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bigquery_scheduler_form" model="ir.ui.view">
        <field name="name">cr.big.query.scheduler.form</field>
        <field name="model">cr.big.query.scheduler</field>
        <field name="arch" type="xml">
            <form string="BigQuery Automation Configuration">
                <sheet>
                    <div class="oe_title" invisible="cr_operation =='export'">
                                <div style="margin-bottom: 10px;word-wrap: break-word;border: 1px dotted;padding: 3px;font-weight: bold;color: #666666;background: antiquewhite;"
                                     ><div style="display: flex; gap: 10px;flex-wrap: nowrap;">

                                    <p>
                                       Please Make Sure Here You have Selected Table That Is Present In Bigquery Database For Import.
                                    </p>
                                </div>
                                </div></div>
                    <group>

                        <field name="cr_name"/>
                        <field name="cr_operation"/>
                        <field name="cr_config_id"/>
                        <field name="cr_export_model_id" invisible="cr_operation =='import'"/>
                        <field name="cr_import_model_id" invisible="cr_operation =='export'"/>
                        <field name="cr_model_columns"  widget="many2many_tags" options="{'no_create': True,'no_edit':True}"/>
                        <field name="cr_mailing_domain"   widget="domain"
                                   options="{'model': 'cr_model_name', 'foldable': true}"/>
                        <field name="cr_export_cron_value_" invisible="cr_operation =='import'"/>
                        <field name="cr_export_scheduled_units_" invisible="cr_operation =='import'"/>
                        <field name="available_field_ids" invisible="1"/>
                        <field name="cr_model_name" invisible="1"/>
                        <field name="cr_import_cron_value_" invisible="cr_operation =='export'"/>
                        <field name="cr_import_scheduled_units_" invisible="cr_operation =='export'"/>
                        <field name="cr_cron_job_id" invisible="1"/>


                    </group><div style="display: flex; gap: 10px;flex-wrap: nowrap;" >
                    <button name="action_create_scheduler"
                            type="object"
                            string="Create Scheduler"
                            class="btn-primary" invisible="cr_cron_job_id"/>

                        <button name="action_edit_scheduler"
                            type="object"
                            string="Edit Scheduler"
                            class="btn-secondary"
                            invisible="not cr_cron_job_id"/>

                        <button name="action_delete_scheduler"
                            type="object"
                            string="Delete Scheduler"
                            class="btn-danger"
                                invisible="not cr_cron_job_id"/>   <button name="run_manually"
                            type="object"
                            string="Run Manually"
                                                    class="oe_highlight"
/></div>
                </sheet>
            </form>

        </field>
    </record>
    <!-- Action -->
    <record id="action_bigquery_scheduler" model="ir.actions.act_window">
        <field name="name">Operations</field>
        <field name="res_model">cr.big.query.scheduler</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_bigquery_scheduler" name="Operations" parent="menu_bigquery_config_root"
              action="action_bigquery_scheduler" sequence="30"/>

</odoo>