<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="find_duplicate_form_id" model="ir.ui.view">
        <field name="name">find duplicate form</field>
        <field name="model">duplicate.wiz</field>
        <field name="arch" type="xml">
            <form string="Find Duplicate Data">
                <sheet>
                    <group>
                        <field name="is_selected_records"/>
                        <field name="field_ids"/>
                    </group>
                    <footer>
                        <button type="object" string="Find Duplicate Records" class="oe_highlight"
                                name="action_find_duplicates"/>
                        <button type="object" class="oe_highlight" string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="merge_duplicate_data_form_id" model="ir.ui.view">
        <field name="name">Merge Duplicate Data</field>
        <field name="model">duplicate.wiz</field>
        <field name="arch" type="xml">
            <form string="Merge Duplicate Data">
                <sheet>
                    <field name="actions" widget="radio"/>
                    <field name="duplicate_lines" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}">
                        <tree>
                            <field name="is_original"/>
                            <field name="record_id"/>
                            <field name="display_name"/>
                        </tree>
                    </field>
                    <footer>
                        <button type="object" string="Merge Data" class="oe_highlight" name="merge_data"/>
                        <button type="object" class="oe_highlight" string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>